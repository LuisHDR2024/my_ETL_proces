{
  "Comment": "Step Function que recibe par√°metros de Lambda y ejecuta Glue Job",
  "StartAt": "Glue StartJobRun",
  "States": {
    "Glue StartJobRun": {
      "Type": "Task",
      "Resource": "arn:aws:states:::glue:startJobRun.sync",
      "Parameters": {
        "JobName": "Superstore-job-v2",
        "Arguments": {
          "--input_file.$": "$.input_filename",
          "--output_folder.$": "$.output_filename"
        }
      },
      "End": true
    }
  }
}